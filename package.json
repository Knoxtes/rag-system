{
  "name": "rag-chat-system",
  "version": "1.0.0",
  "description": "RAG-powered chat system with React frontend and Flask backend",
  "main": "chat_api.py",
  "scripts": {
    "start": "concurrently --kill-others --prefix-colors \"red,blue\" --prefix \"[{name}]\" \"npm:start:backend\" \"npm:start:frontend\"",
    "start:backend": "python chat_api.py",
    "start:frontend": "cd chat-app && npm start",
    "build": "cd chat-app && npm run build",
    "install:all": "npm install && cd chat-app && npm install",
    "install:backend": "pip install -r requirements-production.txt",
    "install:frontend": "cd chat-app && npm install",
    "dev": "npm run start",
    "production": "python chat_api.py --production"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {},
  "keywords": [
    "rag",
    "chat",
    "ai",
    "flask",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Knoxtes/rag-system.git"
  },
  "homepage": "https://github.com/Knoxtes/rag-system#readme"
}