# ============================================
# RAG SYSTEM - ENVIRONMENT CONFIGURATION
# Domain: Ask.7MountainsMedia.com
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# Flask Configuration
# ============================================
FLASK_ENV=production
FLASK_DEBUG=False

# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-flask-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# ============================================
# Server Ports
# ============================================
PORT=3000
FLASK_PORT=5001
FRONTEND_PORT=3000
BACKEND_PORT=5001

# ============================================
# Domain Configuration
# ============================================
DOMAIN=Ask.7MountainsMedia.com
CORS_ORIGINS=https://Ask.7MountainsMedia.com
OAUTH_REDIRECT_URI=https://Ask.7MountainsMedia.com/auth/callback

# For development (localhost):
# DOMAIN=localhost:3000
# CORS_ORIGINS=http://localhost:3000
# OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================
# Google Cloud Configuration
# ============================================
# Get these from Google Cloud Console
GOOGLE_API_KEY=your-google-api-key-here
PROJECT_ID=your-gcp-project-id
LOCATION=us-central1

# Google Drive Configuration
GOOGLE_DRIVE_FOLDER_ID=your-shared-drive-id-here

# ============================================
# Database Configuration
# ============================================
CHROMA_DB_PATH=./chroma_db
VECTOR_DIMENSION=384

# ============================================
# Performance Tuning
# ============================================
MAX_WORKERS=4
CACHE_EXPIRY=21600
ENABLE_REDIS_CACHE=false

# Redis Configuration (if enabled)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/rag-system.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Development logging
# LOG_LEVEL=DEBUG

# ============================================
# Security Settings
# ============================================
# JWT token expiration (seconds)
JWT_EXPIRATION=604800
JWT_REFRESH_EXPIRATION=2592000

# Session configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=true
PERMANENT_SESSION_LIFETIME=604800

# ============================================
# Document Processing
# ============================================
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,docx,pptx,xlsx,txt,md

# OCR Settings
ENABLE_OCR=true
OCR_LANGUAGE=eng

# ============================================
# RAG System Configuration
# ============================================
# Embedding model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Text splitter
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Retrieval
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# ============================================
# AI Model Configuration
# ============================================
# Gemini API settings
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# Vertex AI settings (if using)
USE_VERTEX_AI=false
VERTEX_AI_MODEL=text-bison@001

# ============================================
# Development Settings
# ============================================
# Set to true for development mode
DEVELOPMENT=false

# Enable debug endpoints
DEBUG_ENDPOINTS=false

# Verbose logging
VERBOSE_LOGGING=false

# ============================================
# Monitoring & Analytics
# ============================================
ENABLE_ANALYTICS=false
ANALYTICS_ID=

# Error tracking
ENABLE_ERROR_TRACKING=false
SENTRY_DSN=

# ============================================
# Backup & Maintenance
# ============================================
AUTO_BACKUP=false
BACKUP_PATH=./backups
BACKUP_INTERVAL=86400

# ============================================
# Notes
# ============================================
# 1. Generate secret keys with:
#    python3 -c "import secrets; print(secrets.token_hex(32))"
#
# 2. For Google Cloud credentials:
#    - Create service account in Google Cloud Console
#    - Download credentials.json file
#    - Place in application root
#
# 3. OAuth redirect URI must be added in:
#    Google Cloud Console → APIs & Services → Credentials
#
# 4. CORS_ORIGINS must match your domain exactly
#
# 5. Never commit .env file to version control
#    (already in .gitignore)
