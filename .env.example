# RAG System Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# ENVIRONMENT
# ============================================
FLASK_ENV=production
NODE_ENV=production
DEBUG=False

# ============================================
# SERVER CONFIGURATION
# ============================================
# Port for Node.js proxy server
PORT=3000

# Port for Flask backend
FLASK_PORT=5001

# ============================================
# DOMAIN CONFIGURATION
# ============================================
# Production domain (update for your deployment)
DOMAIN=Ask.7MountainsMedia.com

# CORS allowed origins (comma-separated for multiple)
CORS_ORIGINS=https://Ask.7MountainsMedia.com

# OAuth redirect URI
OAUTH_REDIRECT_URI=https://Ask.7MountainsMedia.com/auth/callback

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_generated_secret_key_here
JWT_SECRET_KEY=your_generated_jwt_secret_key_here

# JWT token expiry (in hours)
JWT_ACCESS_TOKEN_EXPIRES=168  # 7 days
JWT_REFRESH_TOKEN_EXPIRES=720  # 30 days

# ============================================
# GOOGLE CLOUD CONFIGURATION
# ============================================
# Google API Key for Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Vertex AI Configuration
PROJECT_ID=your_gcp_project_id
LOCATION=us-central1

# Google Drive Configuration
GOOGLE_DRIVE_FOLDER_ID=your_shared_drive_folder_id

# Use Vertex AI for embeddings (True/False)
USE_VERTEX_AI=True

# ============================================
# CREDENTIALS FILES
# ============================================
# Path to Google Cloud service account credentials
CREDENTIALS_FILE=credentials.json

# Path to OAuth token file
TOKEN_FILE=token.pickle

# ============================================
# DATABASE CONFIGURATION
# ============================================
# ChromaDB directory
CHROMA_DB_PATH=./chroma_db

# ============================================
# RATE LIMITING
# ============================================
# Requests per minute per user
RATE_LIMIT_PER_MINUTE=60

# Maximum requests per hour
RATE_LIMIT_PER_HOUR=1000

# ============================================
# CACHING
# ============================================
# Enable response caching
ENABLE_CACHE=True

# Cache TTL in seconds
CACHE_TTL=3600

# ============================================
# LOGGING
# ============================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log directory
LOG_DIR=./logs

# ============================================
# OPTIONAL: REDIS (for advanced caching)
# ============================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# ============================================
# OPTIONAL: MONITORING
# ============================================
# SENTRY_DSN=your_sentry_dsn_here
# ANALYTICS_ID=your_analytics_id_here

# ============================================
# DEVELOPMENT SETTINGS (ignore for production)
# ============================================
# FLASK_DEBUG=True
# REACT_APP_API_URL=http://localhost:5001
