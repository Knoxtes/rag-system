# RAG System Environment Configuration Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env with real credentials to version control!

# Flask Configuration
FLASK_ENV=production
FLASK_SECRET_KEY=your-secret-key-here-generate-with-secrets-token-urlsafe-32
FLASK_DEBUG=false

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
JWT_SECRET_KEY=your-jwt-secret-key-generate-with-secrets-token-urlsafe-32

# Google API Configuration
GOOGLE_API_KEY=your-google-api-key-here
USE_VERTEX_AI=true
PROJECT_ID=your-gcp-project-id
LOCATION=us-central1

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting (optional)
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per day;10 per hour

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/rag_system.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# Database Configuration
CHROMA_PERSIST_DIR=./chroma_db

# Performance Configuration
WORKERS=4
THREADS=2
WORKER_CLASS=sync
