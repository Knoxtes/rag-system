# Production Environment Configuration for RAG System

# Flask Configuration
FLASK_ENV=production
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_DEBUG=False

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_REDIRECT_URI=https://yourdomain.com/auth/callback

# Organization Access Control
ALLOWED_DOMAINS=yourdomain.com,anotherdomain.com
JWT_SECRET_KEY=your-jwt-secret-key-change-this
TOKEN_EXPIRY_HOURS=24

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database Configuration (if using external database)
DATABASE_URL=postgresql://user:password@localhost:5432/ragdb

# Google Drive API Configuration
GOOGLE_DRIVE_SERVICE_ACCOUNT_FILE=path/to/service-account-key.json

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/rag-system/app.log

# Performance Configuration
CACHE_TTL=3600
MAX_WORKERS=4
WORKER_TIMEOUT=300

# Security Headers
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';

# Session Configuration
SESSION_COOKIE_DOMAIN=yourdomain.com
SESSION_COOKIE_SECURE=true

# Application Configuration
APP_NAME=RAG Chat Assistant
APP_VERSION=1.0.0
ENVIRONMENT=production